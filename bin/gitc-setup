use App::Gitc::Util qw( git );
use App::Gitc::Config;

my $project = shift;
my $alias   = shift || '';
git "clone $gitc_config{repo_base}:$project $alias";
chdir( $alias || $project );
git "branch $_ origin/$_" for qw( test stage prod );
