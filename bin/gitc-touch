# PODNAME: gitc-touch
# ABSTRACT: Touch a changeset
# VERSION

use App::Gitc::Util qw( meta_data_add parse_changeset_spec );

my $changeset_spec = shift;
my ( $project_name, $changeset ) = parse_changeset_spec($changeset_spec);

meta_data_add({
    action    => 'touch',
    changeset => $changeset,
    project   => $project_name,
});
